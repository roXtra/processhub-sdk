{
  "compilerOptions": {
    "incremental": false,
    "target": "ES2019",
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "preserveConstEnums": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noEmit": false,
    "strict": true,
    "jsx": "react-jsx",
    "lib": ["ES2021", "dom"]
  },
  "include": ["./src/**/*"],
  "exclude": ["lib", "tsc_out", "node_modules"]
}
