{
  "compilerOptions": {
    "incremental": false,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": false,
    "outDir": "./tsc_out",
    "rootDir": "./src",
    "preserveConstEnums": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "strictNullChecks": true,
    "jsx" : "react",
    "lib": [
      "esnext",
      "dom"
    ]
  },
   "include": [
    "./src/**/*"
  ],
  "exclude": [ 
    "lib",
    "tsc_out",
    "node_modules"
  ]
}